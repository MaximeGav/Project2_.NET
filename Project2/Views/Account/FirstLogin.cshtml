@model Project2.Models.Domain.Gebruiker
@{
    ViewBag.Title = "Eerste login - Wachtwoord wijzigen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Wachtwoord moet gewijzigd worden</h2>
<h3>U moet een nieuw wachtwoord ingeven:</h3>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

@if (ViewBag.ErrorMessage != null)
{
    <h3 class="errorMessage">@ViewBag.ErrorMessage</h3>
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                <div class="editor-label">
                    
                    @Html.LabelFor(model => model.wachtwoord)
                    
                </div>
                
                <div class="editor-field">
                    
                    @Html.EditorFor(model => model.wachtwoord)
                    
                    @Html.ValidationMessageFor(model => model.wachtwoord)
                    
                </div>

            </li>
        </ol>
        <input type="submit" value="Wijzig" />
    </fieldset>
}